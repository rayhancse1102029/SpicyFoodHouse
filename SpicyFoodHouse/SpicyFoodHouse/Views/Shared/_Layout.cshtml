@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpicyFoodHouse</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/css/otherLogicSingleFoodOrder.css" rel="stylesheet" />
        <link href="~/css/Layout.css" rel="stylesheet" />
        <link href="~/css/homeOurTeam.css" rel="stylesheet" />
        <link href="~/css/homeOrderNow.css" rel="stylesheet" />
        <link href="~/css/homeIndex.css" rel="stylesheet" />
        <link href="~/css/homeAllFood.css" rel="stylesheet" />
        <link href="~/css/homeAbout.css" rel="stylesheet" />
        <link href="~/css/Contact.css" rel="stylesheet" />
        <link href="~/Animate_CSS/animate.min.css" rel="stylesheet" />
        <link href="~/FontAwsome/css/all.css" rel="stylesheet" />
        <link href="~/assests/css/input-effect.css" rel="stylesheet" />
        <link href="~/assests/css/slick.css" rel="stylesheet" />
        <link href="~/assests/css/owl.carousel.min.css" rel="stylesheet" />
        <link href="~/assests/css/style.css" rel="stylesheet" />
        <link href="~/assests/css/theme.css" rel="stylesheet" />

    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        @*<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />*@
    </environment>
    

</head>
<body>

    <!--Top-bar-->
    <div class="container-fluid top-bar-bg" id="bg-navbar-id">
        <div class="col-md-6">
            <div class="top-bar-content">
                <a href="#">
                    <p>spicyfoodhouse@gmail.com</p>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="top-bar-content top-right">
                <ul>
                    <li class="">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                    </li>
                    <li class="">
                        <a href="#"><i class="fab fa-twitter-square"></i></a>
                    </li>
                    <li class="">
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </li>
                    <li class="">
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    @*navbar one*@

    <nav class="navbar navbar-inverse navbar-fixed-top" id="sm-navbar-id">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <span style="font-family: cursive; font-size: 30px; font-weight: bold; color: whitesmoke;"><img src="images/SpicyFoodHouseSmallLogo.png" class="img-responsive" style="margin-top: -10px;" /></span>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>

    <!--navbar two-->
    <section class="fix-nav">
        <div class="container-fluid logo-bar-bg" id="bg-navbar-id-two">
            <div class="logo-top-row">
                <div class="col-lg-3 text-center"><a asp-controller="Home" asp-action="Index"><img src="~/images/SpicyFoodHouse.png" alt="horseway-themes" style="margin-top: -2px;" /></a></div>
                <div class="col-lg-9">
                    <div class="clearfix"></div>
                    <div class="col-lg-9">
                        <div class="row text-center">
                            <div class="drop-select">
                                <div class="search-bar">
                                    <div class="search-bar-item">
                                        <form asp-controller="Home" asp-action="AllFood" method="post">
                                            <input type="text" name="srctext" placeholder="Search in Spicy Food House">
                                            <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 wishlist">
                        <div class="row">
                            <div class="cart-item">
                                <a href="#">
                                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                    <p>Cart item</p>
                                    <span>1</span>
                                </a>

                            </div>
                            <div class="sign-in">
                                <a href="#" data-toggle="modal" data-target="#myModal2">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <span class="user-name-and-logo">
                                            <p>@Context.Session.GetString("userName") !</p>
                                            <i class="fa fa-user-circle" aria-hidden="true"></i>
                                        </span>

                                    }
                                    else
                                    {
                                        <p>Sign in</p>
                                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                                    }
                                </a>
                                <div class="sign-in-hover">
                                    <a asp-controller="ClientAccount" asp-action="ClientIndex">Your Account</a>
                                    <a asp-controller="ClientAccount" asp-action="ClientIndex">Your Orders</a>

                                    <a asp-controller="Account" asp-action="Register" class="login">Registration</a><br />

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">

                                            <button type="submit" class="btn btn-primary login">Log out</button>

                                        </form>

                                    }
                                    else
                                    {

                                        <a asp-controller="Account" asp-action="Login" class="login">Login</a><br />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <nav class="navbar menu-bar-bg">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                </div>
                <div class="row">
                    <div class="collapse mega-menu submenu navbar-collapse text-center" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li>
                                <a asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="About">About Us</a>
                            </li>
                            <li>
                                <a href="javascript:void(0)">Our Foods &nbsp;<i class="fa fa-angle-down" aria-hidden="true"></i></a>
                                <!-- <span class="span-new">NEW</span> -->
                                <div class="submenu-1">
                                    <ul>
                                        <li>
                                            <a href="#"> &nbsp;<i class="fa fa-angle-right" aria-hidden="true"></i>Burger</a>
                                            <div class="sub-mega-menu">
                                                <div class="sub-main-menu">
                                                    <span>
                                                        <a asp-controller="Home" asp-action="AllFood" asp-route-id="Vegetable Burger">Vegetable Burger</a>
                                                        <a asp-controller="Home" asp-action="AllFood" asp-route-id="Chicken Burger">Chicken Burger</a>
                                                        <a asp-controller="Home" asp-action="AllFood" asp-route-id="Beef Burger">Beef Burger</a>
                                                        <a asp-controller="Home" asp-action="AllFood" asp-route-id="Chesee Burger">Chesee Burger</a>
                                                        <a asp-controller="Home" asp-action="AllFood" asp-route-id="Mushroom Burger">Mushroom Burger</a>
                                                        <a asp-controller="Home" asp-action="AllFood" asp-route-id="Black Bean Burger">Black Bean Burger</a>
                                                    </span>
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <a asp-controller="Home" asp-action="AllFood" asp-route-id="Ice Cream">Ice Cream </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Home" asp-action="AllFood" asp-route-id="Noodles">Noodles</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Home" asp-action="AllFood" asp-route-id="Fride Rice">Fride Rice</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Home" asp-action="AllFood" asp-route-id="Kacchi">Kacchi</a>
                                        </li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a href="javascript:void(0)">Category Based &nbsp;<i class="fa fa-angle-down" aria-hidden="true"></i></a>
                                <!-- <span class="span-new">HOT</span> -->
                                <div class="submenu-1">
                                    <ul>
                                        <li><a asp-controller="OthersLogic" asp-action="ViewAllFood" asp-route-id="1">Trending Products</a></li>
                                        <li><a asp-controller="OthersLogic" asp-action="ViewAllFood" asp-route-id="2">Popular Products</a></li>
                                        <li><a asp-controller="OthersLogic" asp-action="ViewAllFood" asp-route-id="3">Discounted Products</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="AllFood">ALL Foods</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="OrderNow">Order Now</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="OurTeam">Our Team</a>
                            </li>
                            <li>
                                <a asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("Admin"))
                                {
                                    <li>
                                        <a asp-controller="AdminPanel" asp-action="Index" style="color: red">Admin</a>
                                    </li>
          
                                }
                            }
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("SuperAdmin"))
                                {
                                    <li>
                                        <a asp-controller="AdminPanel" asp-action="Index" style="color: red">SuperAdmin</a>
                                    </li>
          
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </section>

    <div class=" body-content">
        @RenderBody()
        <hr />
        <footer class="nb-footer">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="about">
                            <img src="images/logo.png" class="img-responsive center-block" alt="">
                            <div class="social-media">
                                <ul class="list-inline">
                                    <li><a href="#" title=""><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="#" title=""><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="#" title=""><i class="fab fa-google-plus-g"></i></a></li>
                                    <li><a href="#" title=""><i class="fab fa-linkedin-in"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="footer-info-single">
                            <h2 class="title">Help Center</h2>
                            <ul class="list-unstyled">
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> How to Pay</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> FAQ's</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Sitemap</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Delivery Info</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="footer-info-single">
                            <h2 class="title">Customer information</h2>
                            <ul class="list-unstyled">
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> About Us</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> FAQ's</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Sell Your Items</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Contact Us</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> RSS</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="footer-info-single">
                            <h2 class="title">Security & privacy</h2>
                            <ul class="list-unstyled">
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Terms Of Use</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Privacy Policy</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Return / Refund Policy</a></li>
                                <li><a href="#" title=""><i class="fa fa-angle-double-right"></i> Store Locations</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="footer-info-single">
                            <h2 class="title">Payment</h2>
                            <p>Sample HTML page with Twitter's Bootstrap. Code example of Easy Sticky Footer using HTML, Javascript, jQuery, and CSS. This bootstrap tutorial covers all the major elements of responsive</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copyright">
                <div class="container">
                    <div class="row footer-payment">
                        <div class="col-xs-12 col-sm-12 col-md-6 footer-pay-p">
                            <p>© @DateTime.Now.Year &nbsp; - <a href="#">&nbsp; SpicyFoodHouse</a></p>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-6 text-center">
                            <div class="payment">
                                <p class="payment-p">Payment acceptable on</p>
                                <a href="#"><img src="assests/img/Payment-partner/pay-1.png" alt="" /></a> <a href="#"><img src="assests/img/Payment-partner/pay-2.png" alt="" /></a> <a href="#"><img src="assests/img/Payment-partner/pay-3.png" alt="" /></a>                            <a href="#"><img src="assests/img/Payment-partner/pay-4.png" alt="" /></a> <a href="#"><img src="assests/img/Payment-partner/pay-5.png" alt="" /></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>


    <script src="~/js/half-Full-Double-Quarter.js"></script>
    <script src="~/Animate_CSS/gulpfile.js"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/assests/js/classie.js"></script>
    <script src="~/assests/js/custom.js"></script>
    <script src="~/assests/js/owl.carousel.min.js"></script>
    <script src="~/assests/js/slick.js"></script>
    <script src="~/assests/js/theme.js"></script>
    <script src="~/assests/js/cusotm-owl-carousel.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
