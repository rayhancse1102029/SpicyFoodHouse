

    <table class="table table-bordered table-striped table-hover">
        <tr>
            <td>
                Customer Email
            </td>
            <td>
                @ViewBag.email
            </td>
        </tr>
        <tr>
            <td>
                Customer Name
            </td>
            <td>
                @ViewBag.name
            </td>
        </tr>
        <tr>
            <td>
                Phone
            </td>
            <td>
                @ViewBag.phone
            </td>
        </tr>
        <tr>
            <td>
                Address
            </td>
            <td>
                @ViewBag.address
            </td>
        </tr>
        <tr>
            <td>
                Total Ordered
            </td>
            <td>
                @ViewBag.totalOrdered
            </td>
        </tr>
        <tr>
            <td>
                IsVerified
            </td>
        @if (ViewBag.IsVerified > 0)
        {
            <td>
                Verified
            </td>
        }
        else
        {
            <td style="color: red">
                UnVerified
            </td>
        }
        </tr>
        <tr>
            <td>
                NID/Birth
            </td>
            <td>
                <img src="data:image;base64, @Convert.ToBase64String(ViewBag.nid)" class="img-responsive" width="200px" height="200px"/>
            </td>
        </tr>
        
    </table>
