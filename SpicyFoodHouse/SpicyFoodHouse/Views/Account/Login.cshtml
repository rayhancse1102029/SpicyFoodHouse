@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="margin-from-top-in-Register-Login-view"></div>

<!--Login-->

<div class="container padd-50 cart-table">
    <div class="col-md-12">
        <div class="col-md-12">
            <div class="wrapper text-center">
                <form class="form-signin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">       
                    <h2 class="heading-product">Please login</h2>
                    <div class="col-md-12 input-position">
                        <span class="input input--yoshiko">
                            <input class="input__field input__field--yoshiko" type="email" asp-for="Email">
                            <label class="input__label input__label--yoshiko" asp-for="Email"> <span class="input__label-content input__label-content--yoshiko" data-content="Email">Email</span> </label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="col-md-12 input-position">
                        <span class="input input--yoshiko">
                            <input class="input__field input__field--yoshiko" type="password" asp-for="Password">
                            <label class="input__label input__label--yoshiko" asp-for="Password"> <span class="input__label-content input__label-content--yoshiko" data-content="Password">Password</span> </label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </span>
                    </div>  
                    @*<label class="checkbox">
                        <input type="checkbox" value="remember-me" id="rememberMe" asp-for="RememberMe"> Remember me
                    </label>*@
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" id="rememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </label>
                    </div>
                    <button class="submit-button def-btn lg-btn" type="submit">Login</button>  
                </form>
                <p class="pt-20">Not a member? <a asp-controller="Account" asp-action="Register">Sign up now</a>
            </div>
        </div>
    </div>
</div>


